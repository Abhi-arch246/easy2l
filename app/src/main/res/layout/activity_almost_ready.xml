<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AlmostReadyActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="198dp"
        android:layout_height="182dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/lesson"
        android:layout_marginEnd="107dp" />
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="Your customised \nCourse is ready"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/classmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/boardmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="61dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/round_btn2"
        android:text="JOIN THIS COURSE"
        android:textSize="18sp" />


</LinearLayout>