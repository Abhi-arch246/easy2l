<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoardActivity">


    <TextView
        android:id="@+id/getclass"

        android:layout_width="187dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="118dp"
        android:gravity="center"

        android:text="TextView"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/board"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/getclass"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="87dp"
        android:gravity="center"
        android:text="My school board is"
        android:textSize="25sp">


    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/boardcard1"
        android:layout_margin="15dp"
        android:padding="20dp"

        app:cardCornerRadius="12dp"
        android:elevation="10dp"
        android:layout_below="@id/board"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="95dp"
                android:layout_height="72dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/blogo">


            </ImageView>

            <TextView
                android:id="@+id/boardtitle1"
                android:layout_width="95dp"
                android:layout_height="23dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="168dp"
                android:layout_toEndOf="@+id/logo"
                android:text="CBSE"

                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_below="@+id/boardtitle1"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="33dp"
                android:layout_toEndOf="@+id/logo"
                android:text="Central Board of Secondary Education" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/boardcard2"
        android:layout_margin="15dp"
        android:padding="20dp"
        app:cardCornerRadius="12dp"
        android:elevation="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/boardcard1"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="95dp"
                android:layout_height="72dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/lboard2"
                tools:ignore="DuplicateIds">


            </ImageView>

            <TextView
                android:id="@+id/boardtitle2"
                android:layout_width="95dp"
                android:layout_height="23dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="168dp"
                android:layout_toEndOf="@+id/logo"
                android:text="ICSE"

                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_below="@+id/boardtitle2"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="33dp"
                android:layout_toEndOf="@+id/logo"
                android:text="Indian Certificate of Secondary Education" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/boardcard3"
        android:layout_margin="15dp"
        android:padding="20dp"
        app:cardCornerRadius="12dp"
        android:elevation="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/boardcard2"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="95dp"
                android:layout_height="72dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/blogo3"
                tools:ignore="DuplicateIds">


            </ImageView>

            <TextView
                android:id="@+id/boardtitle3"
                android:layout_width="95dp"
                android:layout_height="23dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="168dp"
                android:layout_toEndOf="@+id/logo"
                android:text="SSC"

                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_below="@+id/boardtitle3"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="33dp"
                android:layout_toEndOf="@+id/logo"
                android:text="Secondary School Certificate" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>